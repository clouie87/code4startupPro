<div class="row">
  <div class="col m6 offset-m3 center">
    <h2>Change your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render partial: "shares/devisemes" %>
    <% f.hidden_field :reset_password_token %>

      <div class="input-field">
        <%= f.password_field :password, :id => "password", :placeholder => "new password", autofocus: true %>
      </div>

      <div class="input-field">
        <%= f.password_field :password_confirmation, :id => "password_confirmation", :placeholder => "new password", autofocus: true %>
      </div>
      
      <button class="btn waves-effect waves-light" type="submit" name="action">Change my password</button>
      
    <% end %>

  </div>    
</div>